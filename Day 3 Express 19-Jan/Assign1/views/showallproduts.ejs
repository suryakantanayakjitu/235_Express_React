<html>

<head>
    <style>
        .nav{
            width: 100%;
            background-color: black;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            padding: 10px;
            margin-bottom: 20px;
        }

        .nav a{
            color: white;
            font-weight: 300;
            text-decoration: wavy;
            border: 1px solid white;
            padding: 5px;
            background-color: chocolate;
            margin-inline: 20px;
        }
    </style>
</head>

<body>
    <nav class="nav">
        <a href="/">Back to Home</a>  
    </nav>

    <h3>All Products</h3>
    <hr />


    <table border="2" width="500px" cellspacing="0" cellpadding="5">

        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Product Category</th>
            <th></th>
        </tr>

        <% for(let item of productsArray) { %>
            <tr>
                <td>
                    <%=item.pid%>
                </td>
                <td>
                    <%=item.pname%>
                </td>
                <td>
                    <%=item.pprice%>
                </td>
                <td>
                    <%=item.quantity%>
                </td>
                <td>
                    <%=item.category%>
                </td>
                <!-- ****************** Below One is for get product Details By Id ***************-->
                <!-- <td>
                    <a href="/prds/GetProdById/<%=item.pid%>">Details</a> 
                </td> -->
                
                
                <!-- ****************** Below One is for get product Details By query String *************** -->
                <td>
                    <a href="/prds/GetProdById?category=<%=item.category%>">Details</a> 
                </td>
            </tr>
            <% } %>

    </table>
    <hr/>
  
</body>

</html>