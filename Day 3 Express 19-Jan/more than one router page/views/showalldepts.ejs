<html>

<head>
</head>

<body>
    <h3>All Departments</h3>
    <hr />


    <table border="2" width="400" cellspacing="0" cellpadding="5">

        <tr>
            <th>Dept Number</th>
            <th>Dept Name</th>
            <th>Location</th>
            <th></th>
        </tr>

        <% for(let item of deptsArray) { %>
            <tr>
                <td>
                    <%=item.deptno%>
                </td>
                <td>
                    <%=item.dname%>
                </td>
                <td>
                    <%=item.loc%>
                </td>
                <td>
                    <a href="/depts/GetDeptById/<%=item.deptno%>">Details</a> 
                </td>
            </tr>
            <% } %>

    </table>
    <hr/>
    <a href="/">Back to Home</a>    
</body>

</html>